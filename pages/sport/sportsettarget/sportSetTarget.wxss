page{
  padding-top: 30vh;
}
/* header */
.header{
  width: 100%;
  height: 30vh;
  position: fixed;
  top: 0;
  overflow: hidden;
}
.header_bg{
  height: 30vh;
  width: 100%;
}
.back{
  position: absolute;
  top: 0px;
  left: 32rpx;
  font-size: 13px;
}
.header_bottom{
  width: 100%;
  position: absolute;
  bottom: 20rpx;
}
.header_bottom2{
  padding: 0 60rpx;
  display: flex;
}
.hb_c{
  margin-right: 32px;
}
.hb_c_t{
  color: #D3D3D1;
  font-size: 22rpx;
}
.hb_c_b{
  color: #92928E;
  font-size: 18rpx;
}
.bmi_level_container{
  position: relative;
  margin: 0 60rpx;
  margin-bottom: 2px;
  height: 22px;
  left:-13px;
}
.bmi_level{
  height: 14px;
  width: 6px;
  position: absolute;
  bottom: 0;
  margin-right: 5px;
}
.bmi_level2{
  left: 14px
}
.bmi_level3{
  left: 28px
}
.bmi_level4{
  left: 42px
}
/*  */
.b_container{
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 32rpx;
  margin-bottom: 15px;
}
.b_container_1{
  font-size: 32rpx;
}
.b_container_3{
  font-size: 38rpx;
  color: #1CA0FB;
}
.b_container_2{
  color: #EDEDED
}
.plan_container{
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
}
.plan_item{
  text-align: center;
}
.plan_item_top{
  font-size: 28rpx;
  color: #A3A3A3;
  border: 1px solid #E8E8E8;
  padding: 2px 8px;
  border-radius: 3px;
}
.plan_item_bottom{
  color: #727272;
  font-size: 30rpx;
  margin-top: 6px;
}
.active{
  color: #fff;
  background: #1CA0FB;
  border: 1px solid #1CA0FB;
}
.target{
  width: 100%;
  padding: 0 32rpx;
}
.targeto{
  width: 100%;
  background: #EBEBEB;
  font-size: 28rpx;
  border-radius: 5px;
  text-align: center;
  padding: 5px 0 ;
}
.kll_title{
  font-size: 32rpx;
  margin: 15px 0 0 32rpx;
}
.kll_container{
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 32rpx;
  margin-top: 24rpx;
}
.kll_container_1{
  font-size: 28rpx;
  color: #6C6C6C;
}
.kll_container_3{
  font-size: 28rpx;
  color: #1CA0FB;
}
.kll_container_2{
  color: #EDEDED
}
.other{
  font-size: 28rpx;
  color: #8A8A8A;
  padding: 0 32rpx;
  height: 60px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.footer{
  display: flex;
  position: fixed;
  bottom: 0;
  background: #0192D6;
  padding: 24rpx;
  width: 100%;
  font-size:30rpx;
  color: #DCECF7;

}
.footer_o{
  width: 100%;
  text-align: center;
}
.footer_i{
  width: 50%;
  text-align: center;
}
.footer_i:first-child{
  border-right: 1px solid #A3D7F0;
}

/* 修改 */
.bigTitle{
  font-size: 32rpx;
  font-weight: 900;
  padding: 16rpx 32rpx;
}