page{
  background: #E5E5E5;
}
.title{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 12rpx;
  background: #fff;
  padding-bottom: 10rpx;
}
.left{
  width: 50px;
  margin: 0 10px;
}
.right{
  width: calc(100% - 80px);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.rightTop{
  font-size: 32rpx;
  font-weight: 900
}
.rightBottom{
  font-size: 26rpx;
}
.content{
  padding: 32rpx;
  padding-bottom: 0;
  background: #fff;
}
.contentTop{
  font-size: 30rpx;
  margin-bottom: 20rpx;
  font-weight: 900;
}
.contentBottom{
  font-size: 28rpx;
  width: 100%;
  padding-bottom: 32rpx;
  border-bottom: 1px solid #E1E1E1;
  line-height: 46rpx;
}
.pinlv{
  font-size: 28rpx;
  line-height: 46rpx;
}
.icon{
  width:16px;
  height:16px;
  vertical-align:middle;
  margin-right:2px;
  position:relative;
  top:-2px;
}